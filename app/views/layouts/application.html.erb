<!DOCTYPE html>
<html>
<head>
  <title>Epcot</title>
  <meta name="viewport" content="width=device-width, initial-scale=1"> 
  <% if Rails.env.production? %>
	<link rel="stylesheet" href="http://code.jquery.com/mobile/1.0rc1/jquery.mobile-1.0rc1.min.css" />
  	<%= stylesheet_link_tag "application" %>
  <% else %>
  	<%= stylesheet_link_tag "all" %>
  <% end %>
  <%= csrf_meta_tags %>

  <% if Rails.env.production? %>
    <script src="http://code.jquery.com/jquery-1.6.4.min.js"></script>
    <script src="http://code.jquery.com/mobile/1.0rc1/jquery.mobile-1.0rc1.min.js"></script>
    <%= javascript_include_tag "application" %>
  <% else %>
    <%= javascript_include_tag "all" %>
  <% end %>
</head>
<body class="ui-mobile-viewport">

<div data-role="page" data-url="<%= request.path %>" data-theme="b">
  <div data-role="header" data-theme="b">
    <% if content_for?(:header) %>
      <%= yield :header %>
    <% else %>
      <%= link_to 'Home', root_path, "class" => "ui-btn-left", "data-icon" => "arrow-l" %>
      <h1><%= @title || 'Epcot Food & Wine 2011' %></h1>
    <% end %>    
  </div>
  <%= yield %>
  <div data-role="footer" data-position="fixed" class="ui-state-persist">
    <div data-role="navbar">
  		<ul>
  		  <li><%= nav_link "Countries", root_path %></li>
  		  <li><%= nav_link "Dishes", dishes_path %></li>
  			<li><%= nav_link "Favorites", favorites_path %></li>
			  <% unless user_signed_in? %>
          <li><%= nav_link 'Sign In', new_user_session_path %></li>
          <li><%= nav_link 'Sign Up', new_user_registration_path %></li>
        <% else %>
          <li><%= nav_link 'Account', edit_user_registration_path %></li>
        <% end %>
  		</ul>
    </div>
	</div>
</div>
</body>
</html>
